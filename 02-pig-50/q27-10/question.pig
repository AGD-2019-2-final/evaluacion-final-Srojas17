data = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);

dato = FOREACH data GENERATE firstname, INDEXOF(firstname,'ia',0) as posicion;

filt = FOREACH dato GENERATE posicion;

store filt into 'output';
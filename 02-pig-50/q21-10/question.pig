data = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);


dato = FOREACH data GENERATE firstname,color;

filt = FILTER dato BY color=='blue' or color=='green';

store filt into 'output' USING PigStorage(' ');
